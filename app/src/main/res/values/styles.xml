<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item tools:targetApi="LOLLIPOP" name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/timer_background_gradient_end</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TransparentActionBar</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
    
    <style name="TransparentActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@null</item>
        <item tools:targetApi="LOLLIPOP" name="android:elevation">0dp</item>
        <!-- support v7 -->
        <item name="background">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <!--activity_timer-->
    <style name="TutorialTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/tutorial_background_color</item>
        <item name="sv_showcaseColor">@color/tutorial_button_color</item>
        <item name="sv_titleTextAppearance">@style/TutorialTitle</item>
        <item name="sv_buttonText">@string/tutorial_button_title_next</item>
    </style>

    <style name="TutorialTitle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">@color/tutorial_title_color</item>
    </style>

    <style name="TimerToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TimerButton">
        <item name="android:layout_width">@dimen/timer_button_layout_width</item>
        <item name="android:layout_height">@dimen/timer_button_layout_width</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">#eeffffff</item>
    </style>

    <style name="TimerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- Feedback Activity -->
    <style name="IssueReporterTheme" parent="Theme.IssueReporter.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
